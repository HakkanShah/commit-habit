generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid())
  email         String?        @unique
  name          String?
  avatarUrl     String?
  role          String         @default("USER") // "USER" | "ADMIN"
  lastLoginAt   DateTime?
  deletedAt     DateTime?      // Soft-delete: when the user was deleted
  deletedBy     String?        // Admin userId who deleted this user
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  installations Installation[]
  accounts      Account[]
  testimonials  Testimonial[]
  auditLogs     AuditLog[]

  @@index([createdAt])
  @@index([lastLoginAt])
  @@index([deletedAt])
}

model Testimonial {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  content       String    // Original testimonial text (max ~280 chars)
  rating        Int       @default(5) // 1-5 star rating
  status        String    @default("PENDING") // "PENDING" | "APPROVED" | "REJECTED"
  featured      Boolean   @default(false) // Featured on homepage
  editedContent String?   // Admin-edited content (if modified before approval)
  editedAt      DateTime? // When admin edited
  editedBy      String?   // Admin userId who edited
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([status, featured])
}

model Account {
  id                String    @id @default(cuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider          String    // "github" or "google"
  providerAccountId String    // GitHub userId or Google sub
  providerUsername  String?   // GitHub login or Google email
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Installation {
  id              String        @id @default(cuid())
  installationId  Int
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  repoFullName    String        // "owner/repo"
  repoId          Int
  active          Boolean       @default(true)
  commitsToday    Int           @default(0)
  lastRunAt       DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  activityLogs    ActivityLog[]

  @@unique([installationId, repoId])
  @@index([userId])
  @@index([active])
}

model ActivityLog {
  id             String       @id @default(cuid())
  installationId String
  installation   Installation @relation(fields: [installationId], references: [id], onDelete: Cascade)
  action         String       // "commit_created", "skipped_has_commits", "error"
  message        String?
  createdAt      DateTime     @default(now())

  @@index([installationId])
  @@index([createdAt])
}

// Visitor analytics for Discord notifications (rate-limited per IP+page)
model VisitorLog {
  id        String   @id @default(cuid())
  ip        String
  page      String   // "/" or "/dashboard"
  country   String?
  userAgent String?
  createdAt DateTime @default(now())

  @@unique([ip, page]) // One notification per IP per page
  @@index([createdAt])
}

// User-level audit log for tracking all user actions (immutable, append-only)
model AuditLog {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action       String   // LOGIN, LOGOUT, REPO_ADDED, REPO_REMOVED, PAUSE, RESUME, ADMIN_DELETE_USER, etc.
  actorType    String   @default("USER") // "USER" | "ADMIN" | "SYSTEM"
  targetUserId String?  // For admin actions: the user affected by the action
  entityType   String?  // Installation, Testimonial, etc.
  entityId     String?  // ID of the affected entity
  metadata     Json?    // Additional context (e.g., repoName, oldValue, newValue)
  ipAddress    String?  // For security auditing
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([actorType])
  @@index([createdAt])
}

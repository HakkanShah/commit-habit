# Database (Supabase PostgreSQL)
# For LOCAL development: Use direct connection (port 5432)
# DATABASE_URL="postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres"
#
# For VERCEL/SERVERLESS: Use pooler connection (port 6543) with pgbouncer=true
DATABASE_URL="postgresql://postgres.your-project:your-password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true"

# GitHub App Configuration
# Create your GitHub App at: https://github.com/settings/apps/new
GITHUB_APP_ID="your-app-id"
GITHUB_APP_CLIENT_ID="your-client-id"
GITHUB_APP_CLIENT_SECRET="your-client-secret"
GITHUB_WEBHOOK_SECRET="your-webhook-secret"

# GitHub App Private Key (keep line breaks inside quotes)
# Download the .pem file from your GitHub App settings
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your-private-key-content-here
-----END RSA PRIVATE KEY-----"

# Application URL (update after deployment)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# GitHub App Name (for installation URL)
NEXT_PUBLIC_GITHUB_APP_NAME="your-app-name"

# Cron Secret (generate with: openssl rand -hex 32)
CRON_SECRET="your-random-secret-for-cron-endpoint"

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET="your-random-secret-for-sessions"
